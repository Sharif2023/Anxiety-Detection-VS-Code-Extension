{
    "name": "anxiety-detection-intervention",
    "displayName": "Real-Time Anxiety Detection and Intervention System",
    "description": "A comprehensive VS Code extension that detects programmer anxiety through behavioral analysis and provides adaptive interventions to improve mental health and productivity.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Machine Learning",
        "Productivity"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:anxietyTracker.showDashboard",
        "onCommand:anxietyTracker.showInterventions",
        "onCommand:anxietyTracker.exportData",
        "onCommand:anxietyTracker.resetSession",
        "onCommand:anxietyTracker.toggleInterventions"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "anxietyTracker.showDashboard",
                "title": "Anxiety Tracker: Show Dashboard",
                "icon": "$(graph)"
            },
            {
                "command": "anxietyTracker.showInterventions",
                "title": "Anxiety Tracker: View Interventions",
                "icon": "$(lightbulb)"
            },
            {
                "command": "anxietyTracker.exportData",
                "title": "Anxiety Tracker: Export Data",
                "icon": "$(download)"
            },
            {
                "command": "anxietyTracker.resetSession",
                "title": "Anxiety Tracker: Reset Session",
                "icon": "$(refresh)"
            },
            {
                "command": "anxietyTracker.toggleInterventions",
                "title": "Anxiety Tracker: Toggle Interventions",
                "icon": "$(toggle-on)"
            }
        ],
        "keybindings": [
            {
                "command": "anxietyTracker.showDashboard",
                "key": "ctrl+shift+a",
                "when": "editorTextFocus"
            },
            {
                "command": "anxietyTracker.showDashboard",
                "key": "cmd+shift+a",
                "when": "isMac && editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Anxiety Detection and Intervention",
            "properties": {
                "anxietyTracker.idleMs": {
                    "type": "number",
                    "default": 60000,
                    "minimum": 5000,
                    "description": "How long (ms) without activity counts as idle."
                },
                "anxietyTracker.interventions.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable adaptive interventions and reminders."
                },
                "anxietyTracker.interventions.sensitivity": {
                    "type": "string",
                    "enum": ["low", "medium", "high"],
                    "default": "medium",
                    "description": "Sensitivity level for anxiety detection (low = less frequent, high = more frequent interventions)."
                },
                "anxietyTracker.ml.modelPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to custom ML model file (leave empty to use built-in model)."
                },
                "anxietyTracker.dataCollection.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable data collection for anxiety analysis."
                },
                "anxietyTracker.dataCollection.retentionDays": {
                    "type": "number",
                    "default": 30,
                    "minimum": 1,
                    "description": "Number of days to retain collected data."
                },
                "anxietyTracker.dashboard.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically refresh dashboard data."
                },
                "anxietyTracker.dashboard.refreshInterval": {
                    "type": "number",
                    "default": 5,
                    "minimum": 1,
                    "description": "Dashboard refresh interval in seconds."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "dependencies": {
        "ml-matrix": "^6.10.4",
        "simple-statistics": "^7.8.2"
    },
    "devDependencies": {
        "@types/node": "^20.19.11",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^3.6.0",
        "typescript": "^5.4.0",
        "vsce": "^2.15.0"
    }
}
